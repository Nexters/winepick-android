<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchResult"
            type="kr.co.nexters.winepick.data.model.SearchResult" />

        <variable
            name="vm"
            type="kr.co.nexters.winepick.ui.search.SearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="W, 2:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="@id/img_image"
            app:layout_constraintTop_toTopOf="@id/img_image" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_result_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_result_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{searchResult.name}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="라포데리나 브루넬로 디 몬탈치노" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_result_made_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{searchResult.madeIn}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_result_name"
                tools:text="몰도바" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_result_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/searchResultPrice(searchResult.price)}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_result_made_in"
                tools:text="31,300원" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_result_tastes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <include
                    android:id="@+id/layout_item_search_taste_1"
                    layout="@layout/layout_item_search_taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/v_result_taste_divider1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:title="@{`단맛`}"
                    tools:value="@{searchResult.taste1}" />

                <View
                    android:id="@+id/v_result_taste_divider1"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toRightOf="@+id/layout_item_search_taste_1"
                    app:layout_constraintRight_toLeftOf="@+id/layout_item_search_taste_2"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/layout_item_search_taste_2"
                    layout="@layout/layout_item_search_taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toRightOf="@+id/v_result_taste_divider1"
                    app:layout_constraintRight_toLeftOf="@id/v_result_taste_divider2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:title="@{`산미`}"
                    tools:value="@{searchResult.taste2}" />

                <View
                    android:id="@+id/v_result_taste_divider2"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toRightOf="@+id/layout_item_search_taste_2"
                    app:layout_constraintRight_toLeftOf="@+id/layout_item_search_taste_3"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/layout_item_search_taste_3"
                    layout="@layout/layout_item_search_taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toRightOf="@+id/v_result_taste_divider2"
                    app:layout_constraintRight_toLeftOf="@id/v_result_taste_divider3"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:title="@{`묵직함`}"
                    tools:value="@{searchResult.taste3}" />

                <View
                    android:id="@+id/v_result_taste_divider3"
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:background="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toRightOf="@+id/layout_item_search_taste_3"
                    app:layout_constraintRight_toLeftOf="@id/layout_item_search_taste_4"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/layout_item_search_taste_4"
                    layout="@layout/layout_item_search_taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintLeft_toRightOf="@+id/v_result_taste_divider3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:title="@{`부드러움`}"
                    tools:value="@{searchResult.taste4}" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
