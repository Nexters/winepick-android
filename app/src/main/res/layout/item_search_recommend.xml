<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchRecommend"
            type="String" />

        <variable
            name="vm"
            type="kr.co.nexters.winepick.ui.search.SearchViewModel" />
    </data>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_search_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_search_recommend_item"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingHorizontal="8dp"
        android:paddingVertical="13dp"
        android:singleLine="true"
        android:text="@{searchRecommend}"
        android:textColor="@color/search_recommend_item_text_color"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="혼자 집에서 쉴 때" />
</layout>
